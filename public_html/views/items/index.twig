<div class="row">
	<div class="col-xs-12 col-sm-7">
		<h1>Список ингредиентов</h1>
	</div>
	<div class="col-xs-12 col-sm-3">
		из которых мы создаем товар
	</div>
	<div class="col-xs-12 col-sm-2">
		<a class="btn btn-primary pull-right" href="/items/create">+ Создать</a>
	</div>
</div>

<table class="table stacktable">
	<tr>
		<td>Название</td>
		<td>Описание</td>
		<td></td>
		<td></td>
	</tr>
	{% for row in items %}
	<tr>
		<td><a href="/items/view?id={{ row.id }}">{{ row.name }}</a></td>
		<td>{{ row.info }}</td>
		<td><a href="/items/update?id={{ row.id }}"><span class="glyphicon glyphicon-pencil"></span></a></td>
		<td><a href="/items/delete?id={{ row.id }}" data-confirm="Are you sure you want to delete this item?" data-method="post"><span class="glyphicon glyphicon-trash"></span></a></td>
	</tr>
	{% endfor %}
</table>