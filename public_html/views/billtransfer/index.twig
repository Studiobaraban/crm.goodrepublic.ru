				<td><a href="/billtransfer/view?id={{ row.id }}">{{ row.date|date('d.m H:i') }}</a></td>
				<td>{{ row.billFrom.name }}</td>
				<td>{{ row.name }}</td>
				<td class="ta-r">{{ row.summa }} р</td>
			</tr>
			{% endfor %}
		</table>
	</div>


	<div class="col-xs-12 col-sm-4">
	<h2>Перевод</h2>
		<table class="table stacktable">
			<tr>
				<td>Дата</td>
				<td>Откуда</td>
				<td>Куда</td>
				<td>Сумма</td>
			</tr>
			{% for row in perevod %}
			<tr>
				<td><a href="/billtransfer/view?id={{ row.id }}">{{ row.date|date('d.m H:i') }}</a></td>
				<td>{{ row.billFrom.name }}</td>
				<td>{{ row.billTo.name }}</td>
				<td class="ta-r">{{ row.summa }} р</td>
			</tr>
			{% endfor %}
		</table>
	</div>
</div>