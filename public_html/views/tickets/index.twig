<h2 class="air">Билеты</h2>

<table class="table stacktable">
	<tr>
		<td>Дата</td>
		<td>Кто</td>
		<td>Событие</td>
		<td>Инфо</td>
		<td class="ta-r">Стоимость</td>
		<td class="ta-c">Оплата</td>
	</tr>
	{% for row in tickets %}
		<tr>
			<td>{{ row.date|date('d.m H:i') }}</td>
			<td><a href="/persons/view?id={{ row.persons.id }}">{{ row.persons.second_name }} {{ row.persons.name }} {{ row.persons.middle_name }}</a></td>
			<td>{{ row.events.biblioevents.name }}</td>
			<td>{{ row.info }}</td>
			<td class="ta-r">{{ row.money|number_format(0, '.', ' ') }} <span>руб</span></td>
			<td class="ta-c">
				{% if row.type == 1 %}
					Наличка
				{% elseif row.type == 2 %}
					БезНал
				{% else %}
					Билетник
				{% endif %}
			</td>

		</tr>
	{% endfor %}
</table>



