<div class="row">
	<div class="col-xs-12 col-sm-6 col-md-3">
		<h1>Визиты</h1>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-4">
		
	</div>
	<div class="col-xs-12 col-sm-6 col-md-3">
		<h3 class="itog">{{ vis_count|e }}<span>{{ visitword|e }}</span> </h3>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-2">
		<!--a href="/persons/persons" class="btn btn-primary mt20 pull-right">+ Создать визит</a-->
	</div>
</div>

<h2 class="air">Визиты</h2>

<table class="table stacktable">
	<tr>
		<td>Дата</td>
		<td>id</td>
		<td>Кто</td>
		<td>Событие</td>
		<td>Начало</td>
		<td>Окончание</td>
		<td>Скидка</td>
		<td>Стоимость</td>
		<td>Оплата</td>
		<td></td>
	</tr>
	{% for row in vis %}
	<tr>
		<td>{{ row.start|date('d.m') }}</td>
		<td>{{ row.id|e }}</td>
		<td><a href="/persons/view?id={{ row.persons.id|e }}">{{ row.persons.second_name|e }} {{ row.persons.name|e }} {{ row.persons.middle_name|e }}</a></td>
		<td>{{ row.events.biblioevents.name }}</td>
		<td>{{ row.start|date('H:i') }}</td>
		<td>{{ row.end|date('H:i') }}</td>
		<td>{{ row.discount_money }}</td>
		<td class="ta-r">{{ row.money|number_format(0, '.', ' ') }} <span>руб</span></td>
		<td>
			{% if row.type == 1 %}
			Наличка
			{% elseif row.type == 2 %}
			БезНал
			{% elseif row.type == 3 %}
			Билетник
			{% elseif row.type == 4 %}
			GoodRepublic
			{% elseif row.type == 5 %}
			Абонемент
			{% else %}
			-
			{% endif %}
		</td>
		<td><a href="/visits/update?id={{ row.id|e }}"><span class="glyphicon glyphicon-pencil"></span></a></td>
	</tr>
	{% endfor %}
</table>